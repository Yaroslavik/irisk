{% extends '@App/layout.html.twig' %}

{% block content %}
    {{ render(controller('AppBundle:Component:gallery')) }}
    <div id="catalog">
        <div class="container clearfix">
            {% include '@App/Component/catalogMenu.html.twig' %}
            <div class="right-side clearfix">
                <div class="rs-head clearfix">
                    <div class="breadcumbs">
                        <ul>
                            <li><a href="">Главная</a></li>
                            <span>/</span>
                            <li><a href="">Заглавная</a></li>
                            <span>/</span>
                            <li><a href="">Подглавная</a></li>
                            <span>/</span>
                            <li>Последняя</li>
                        </ul>
                    </div>
                    <div class="pages">
                        <ul>
                            <li><a href="#">&#8249;</a></li>
                            <li class="active"><a href="">1</a></li>
                            <li><a href="">2</a></li>
                            <li><a href="">3</a></li>
                            <li><a href="">4</a></li>
                            <li><a href="">5</a></li>
                            <li><a href="">...</a></li>
                            <li><a href="">15</a></li>
                            <li><a href="#">&#8250;</a></li>
                        </ul>
                    </div>
                    <div class="sort">
                        <form action="#" name="select">
                            <select name="sort" id="sortirovka">
                                <option selected value="Начать с дешевых">Цена &uarr;</option>
                                <option value="Начать с дорогих">Цена &darr;</option>
                                <option value="от А до Я ">А - Я</option>
                                <option value="от Я до А">Я - А</option>
                            </select>
                        </form>
                    </div>
                </div>
                <div class="rs-tovbox clearfix">
                    {% for item in subcategories %}
                        <div class="rs-item clearfix">
                            <div class="t-head clearfix">
                                <a href="{{ path('catalog', {'path': item.slugPath}) }}">{{ item.title }}</a>
                            </div>
                            <div class="t-body">
                                <a href="{{ path('catalog', {'path': item.slugPath}) }}">
                                    <img src="{{ vich_uploader_asset(item, 'file')|imagine_filter('category_catalog') }}" alt="{{ item.title }}">
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div class="rs-foot clearfix">
                    <div class="breadcumbs">
                        <ul>
                            <li><a href="">Главная</a></li>
                            <span>/</span>
                            <li><a href="">Заглавная</a></li>
                            <span>/</span>
                            <li><a href="">Подглавная</a></li>
                            <span>/</span>
                            <li>Последняя</li>
                        </ul>
                    </div>
                    <div class="pages">
                        <ul>
                            <li><a href="#">&#8249;</a></li>
                            <li class="active"><a href="">1</a></li>
                            <li><a href="">2</a></li>
                            <li><a href="">3</a></li>
                            <li><a href="">4</a></li>
                            <li><a href="">5</a></li>
                            <li><a href="">...</a></li>
                            <li><a href="">15</a></li>
                            <li><a href="#">&#8250;</a></li>
                        </ul>
                    </div>
                    <div class="sort">
                        <form action="#" name="select">
                            <select name="sort" id="sortfoot">
                                <option selected value="Начать с дешевых">Цена &uarr;</option>
                                <option value="Начать с дорогих">Цена &darr;</option>
                                <option value="от А до Я ">А - Я</option>
                                <option value="от Я до А">Я - А</option>
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}